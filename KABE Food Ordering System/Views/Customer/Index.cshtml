@model IEnumerable<KABE_Food_Ordering_System.Models.Customer>

@{
    ViewBag.Title = "View All Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.Message != null)
{
    if (ViewBag.Message == "Success")
    {
        <div class="alert alert-success">
            <p>@ViewBag.Message <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span> </p>

        </div>

    }
    else if (ViewBag.Message == "Exist")
    {
        <div class="alert alert-error">
            <p>Branch Name Exist <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span> </p>

        </div>

    }
    else if (ViewBag.Message == "Error")
    {
        <div class="alert alert-error">
            <p>@ViewBag.Message <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span> </p>

        </div>

    }
}

<table  class="table table-bordered table-striped table-hover table-responsive table-condensed" id="customers">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>            
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResidentialAddress)
            </th>
            <th>
                Last Login Date
            </th> 
            <th>
               Status
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResidentialAddress)
                @{KABE_Food_Ordering_System.Logic.BaseLogic<KABE_Food_Ordering_System.Models.Location> locationlogic = new KABE_Food_Ordering_System.Logic.BaseLogic<KABE_Food_Ordering_System.Models.Location>(new KABE_Food_Ordering_System.Models.ApplicationDbContext());
                    var location = locationlogic.Get(item.LocationId);

                    }
                @location.Name
                <label>&nbsp;</label>
                @location.State
                
            </td>
            <td>
                @{KABE_Food_Ordering_System.Logic.BaseLogic<KABE_Food_Ordering_System.Models.User> userlogic = new KABE_Food_Ordering_System.Logic.BaseLogic<KABE_Food_Ordering_System.Models.User>(new KABE_Food_Ordering_System.Models.ApplicationDbContext());
                    var user = userlogic.Get(item.UsersId);

                    }
                @user.LastLoggedIn
                
            </td>
            <td>
                @user.Status
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>*@
            @{
                //KABE_Food_Ordering_System.Logic.BaseLogic<KABE_Food_Ordering_System.Models.User> userlogic = new KABE_Food_Ordering_System.Logic.BaseLogic<KABE_Food_Ordering_System.Models.User>(new KABE_Food_Ordering_System.Models.ApplicationDbContext());
                //KABE_Food_Ordering_System.Models.User user= userlogic.Get
                //if ()
                @*<td>
                    @Html.ActionLink("Deactivate", "DeactivateCustomer")
                </td>*@
            }
        </tr>
        }
    </tbody>

</table>
@section ViewSpecificJavascript
    {
    <script>
        $(document).ready(function () {
            setTimeout(function () {
                $(".alert").fadeOut(100, null);
            },
                3000);
        });
        $("#customers").dataTable();

    </script>

}