                e.preventDefault();
                $('#error').html("Food quantity must between 1 and 200");
            }
            else if (foodQuan > 200) {
                e.preventDefault();
                $('#error').html("Food quantity must between 1 and 200");
            }
            else {
                $('#error').html();
            }
        });

        $("#customers").dataTable();



