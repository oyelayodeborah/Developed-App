            if (vefCode != actualvefCode) {
                e.preventDefault();
                $('#error').html("Incorrect Verification Code");
            }
            else {
                $('#error').html();
            }
        });
        $('#paynow').click(function (e) {
            var vefCode = $('#verfCode').val();
            var actualvefCode = @ViewBag.VefriCode;
            var monthSelected = $(this).val();
            var month = 0;
            @{
                ViewBag.Month = DateTime.Now.Month;
            }
            var actualdatemonth = @ViewBag.Month;


            //if (monthSelected != null || monthSelected != "") {
            month = getMonthFromString(monthSelected);
            if (actualdatemonth != null) {
                if (month < actualdatemonth) {
                    e.preventDefault();
                    $('#error').html("Your card can not be used to complete this transaction.");
                }

            }
            else if (vefCode != actualvefCode) {
                e.preventDefault();
                $('#error').html("Incorrect Verification Code");
            }

            else {
                $('#error').html();
            }
            //}
        });
        var multiply = 0;
        var price = $('#Amount').val();
        var total = $('#Total').val();
        $('#FoodQuantity').keyup(function () {
            var quantity = $(this).val();
            multiply = quantity * price;
            if (quantity >= 1 && quantity <= 200) {
                $("#Total").html("Total: N" + multiply + ".00");
                $("#Amount").val(multiply);

            }
            else {
                $("#Total").html("Food quantity must between 1 and 200");
                $("#Amount").val("0.00");
            }
        })
        if ($('#FoodQuantity') != "" && total == "Total: N 0.00") {
            $('#FoodQuantity').val("0");
        }


    </script>

