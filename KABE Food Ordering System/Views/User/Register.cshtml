    <div class="form-group">
        <button class="btn btn-lg btn-block " onmouseover="this.style.color = '#333', this.style.background='#ddd'" onmouseout="this.style.color = '#ddd', this.style.background='#333'" type="submit" style="background-color:#333;color:#ddd;">Register &emsp;<i class="fa fa-sign-in"></i></button>
    </div>
    <div class="form-group" style="text-align:center">
        <a href=@Url.Action("Login","Account") style="text-align:center">Go Back To Login Page</a>
    </div>
    <p class="mt-5 mb-3 text-muted text-center"><b>KABE</b> &copy;@DateTime.Now.Year</p>



</div>
